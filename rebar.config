{require_otp_vsn, "R15B03|R16B01"}.

{deps, [
        {leo_manager, ".*", {git, "https://github.com/leo-project/leo_manager.git", {tag, "0.14.6"}}},
        {leo_storage, ".*", {git, "https://github.com/leo-project/leo_storage.git", {tag, "0.14.4"}}},
        {leo_gateway, ".*", {git, "https://github.com/leo-project/leo_gateway.git", {tag, "0.14.11"}}}
       ]}.

{sub_dirs, [
            "rel"
           ]}.

